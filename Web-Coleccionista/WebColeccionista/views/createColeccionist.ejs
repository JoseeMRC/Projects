<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Colecciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/coleccionist/createColeccionist.css">
  </head>
  <body>

    <%- include('./includes/navbar.ejs') %>
     


    <div class="p-5 text-center">
      <h2>Crear  perfil de coleccionista</h2>
    </div>

    <section class="section">
      <div class="coleccionist d-flex flex-wrap justify-content-center">
       
          <div
          class="card-group  m-5 p-5 pb-5 text-center card-coleccionist"
          style="width: 38rem;">
            <div class="card-body">
              <form 
                action="/coleccionists/createColeccionist" 
                enctype="multipart/form-data"
                method="post"
               >
               <div 
               class="form-floating mb-3 formulario"
              >
                <input 
                type="text" 
                name="interest"
                class="form-control w-100" 
                value="<%= values.interest %>"
                placeholder="Señor de los anillos, coches, motos...">
                <label for="floatingInput">Interés</label>
        
                        <% validations.forEach ((e)=>{ %>
                          <% if(e.path == 'interest'){ %>
                            <p style="color: red"><%= e.msg %></p>
                          <% } %>
                        <% }) %>
                      </div>
                      <div 
                      class="form-floating mb-3"
                      >
                       <input 
                       type="text" 
                       class="form-control" 
                       name="email" 
                       value="<%= values.email %>"
                       placeholder="ejemplo@ejemplo.com">
                       <label for="floatingInput">Email</label>
                      
                        <% validations.forEach ((e)=>{ %>
                          <% if(e.path == 'email'){ %>
                            <p style="color: red"><%= e.msg %></p>
                          <% } %>
                        <% }) %>
                      </div>
                      <div 
                      class="form-floating mb-3"
                      >
                       <input 
                       type="text" 
                       class="form-control" 
                       name="password"
                       value="<%= values.password %>"
                       placeholder="Minimo 8 carcateres, un mayuscula y una miniscula">
                       <label for="floatingInput">Contraseña</label>
                        <% validations.forEach ((e)=>{ %>
                          <% if(e.path == 'password'){ %>
                            <p style="color: red"><%= e.msg %></p>
                          <% } %>
                        <% }) %>
                      </div>
                      <div 
                      class="form-floating mb-3"
                     >
                       <input 
                       type="text" 
                       class="form-control" 
                       name="description" 
                       value="<%= values.description %>"
                       placeholder="ejemplo@ejemplo.com">
                       <label for="floatingInput">Descripción</label>
                        <% validations.forEach ((e)=>{ %>
                          <% if(e.path == 'description'){ %>
                            <p style="color: red"><%= e.msg %></p>
                          <% } %>
                        <% }) %>
                   </div>
                   <div 
                   class="form-floating mb-3"
                   >
                    <input 
                    type="text" 
                    class="form-control" 
                    name="number_phone" 
                    value="<%= values.number_phone %>"
                    placeholder="654329087">
                    <label for="floatingInput">Numero de teléfono</label>
                        <% validations.forEach ((e)=>{ %>
                          <% if(e.path == 'number_phone'){ %>
                            <p style="color: red"><%= e.msg %></p>
                          <% } %>
                        <% }) %>
                   </div>
                   <div 
                   class="form-floating mb-3"
                   >
                    <input 
                    type="text" 
                    class="form-control" 
                    name="first_name" 
                    value="<%= values.first_name %>"
                    placeholder="Juan, Carlos, Felipe...">
                    <label for="floatingInput">Nombre</label>
                        <% validations.forEach ((e)=>{ %>
                          <% if(e.path == 'first_name'){ %>
                            <p style="color: red"><%= e.msg %></p>
                          <% } %>
                        <% }) %>
                   </div>
                   <div 
                   class="form-floating mb-3"
                  >
                    <input 
                    type="text" 
                    class="form-control" 
                    name="last_name" 
                    value="<%= values.last_name %>"
                    placeholder="Garcia, Perez, Marin...">
                    <label for="floatingInput">Apellidos</label>
                        <% validations.forEach ((e)=>{ %>
                          <% if(e.path == 'last_name'){ %>
                            <p style="color: red"><%= e.msg %></p>
                          <% } %>
                        <% }) %>
                   </div>
                  <div>
                      <label for="imagen"><img src="/images/assets/imagen.png" style="width: 90px;"  alt=""></label>
                      <input 
                        id="imagen"
                        type="file"
                        name="img"
                        hidden
                    >
                   </div>
                   <h5 style="color:red"><%= typeof message != 'undefined' ? message: null %></h5>
                    <button  class="btn btn-danger mb-3 mt-3">Aceptar</button>
                    <p>¿Ya estas registrado? <button onclick="window.location.href='/coleccionists/login'" class="btn btn-danger pe-4 ps-4 p-2">Log In</button> </p>
                </form>
              
            </div>
        </div>
    </section>
    <%- include('./includes/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>