<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Colecciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/coleccionist/oneColeccionist.css">
  </head>
  <body>

    <%- include('./includes/navbar.ejs') %>
      <h2 class="text-center p-5">Perfil de coleccionista</h2>

      <div class="coleccionist d-flex flex-wrap justify-content-center">
          <div
          class="card-group m-5 pt-5 pb-5 text-center card-coleccionist"
          style="width: 28rem;">
            <img
            src="/images/coleccionist/<%= result.img %>"
            class="card-img-top"
            alt="imagen del coleccionista">
            <div class="card-body">
              <h3 class="card-title text-center mt-5">Coleccionista</h3>
              <h4 >Nombre:</h4><p><%= result.first_name %></p>
              <h4 >Interes:</h4><p> <%= result.interest %></p>
              <h4 >Descripcion:</h4><p><%= result.description %></p>
              
            </div>
        </div>
        </div>
      </div>


      <h2 class="text-center p-5">Su coleccion</h2>
      <div class="coleccionist d-flex flex-wrap justify-content-center">
        <% resultObject.forEach((elem)=>{ %>
          <div
          class="card-group m-5 pt-5 pb-5 text-center card-coleccionist"
          style="width: 28rem;">
            <img
            src="/images/objects/<%= elem.img %>"
            class="card-img-top"
            alt="imagen del objeto">
            <div class="card-body">
              <h3 class="card-title text-center mt-5 mb-5">Colección</h3>
              <h4 >Nombre:</h4><p> <%= elem.name %></p>
              <h4 >Año de adquisicion:</h4><p><%= elem.year %></p>
              <h4 >description:</h4><p><%= elem.description %></p>
              
            </div>
        </div>
        <% }) %>
        </div>
      </div>

      <%- include('./includes/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>