<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Colecciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/coleccionist/oneColeccionistLogged.css">
  </head>
  <body>

    <%- include('./includes/navbar.ejs') %>

    <h2 class="text-center p-5">Detalles del Objeto</h2>
    <div class="coleccionist d-flex flex-wrap justify-content-center">
      <div
        class="card-group m-5 pt-5 pb-5 text-center card-coleccionist"
        style="width: 28rem;">
        
        <!-- Imagen del objeto -->
        <img
          src="/images/objects/<%= result.img %>"
          class="card-img-top"
          alt="imagen del objeto">
        
        <div class="card-body">
          <h3 class="card-title text-center mt-5 text-primary mb-5">Objeto</h3>
          <h4>Nombre:</h4><p><%= result.name %></p>
          <h4>Año de adquisición:</h4><p><%= result.year_adquisition %></p>
          <h4>Descripción:</h4><p><%= result.description %></p>
          
          <button onclick="window.history.go(-1);" class="btn btn-danger pe-4 ps-4 p-2 mt-2">Volver</button>
          <button onclick="window.location.href='/objects/formEditObject/<%= result.object_id %>'" class="btn btn-danger pe-4 ps-4 p-2 mt-2">Editar</button>
          <button onclick="window.location.href='/objects/deleteObject/<%= result.object_id %>'" class="btn btn-danger pe-4 ps-4 p-2 mt-2">Borrar</button>
        </div>
      </div>
    </div>

    <%- include('./includes/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
