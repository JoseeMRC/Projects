<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Colecciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/index/index.css">
  </head>
  <body>

    <%- include('./includes/navbar.ejs') %>

      <section class="section3 m-3">
        <div class="container-fluid">
          <div class="row text-center p-5">
            <h2>
              Todos los coleccionistas
            </h2>
          </div>
        </div>
      </section>
      
      <section class="section4 mb-5 ">
        <div class="coleccionist d-flex flex-wrap justify-content-center">
          <% result.forEach((elem)=>{ %>
            <div
            class="card-group  m-5 pt-5 pb-5 text-center card-coleccionist"
            style="width: 28rem;">
              <img
              src="/images/coleccionist/<%= elem.img %>"
              class="card-img-top"
              alt="imagen del coleccionista">
              <div class="card-body">
                <h3 class="card-title text-center mt-5 mb-5">Coleccionista</h3>
                <h4 >Nombre:</h4><p><%= elem.first_name %></p>
                <h4 >Interes:</h4><p> <%= elem.interest %></p>
                <h4 >Descripcion:</h4><p><%= elem.description %></p>
                <button onclick="window.location.href='/coleccionists/oneColeccionist/<%= elem.coleccionist_id %>'" class="btn btn-danger pe-4 ps-4 p-2">Ver</button>
              </div>
          </div>
          <% }) %>
          </div>
        </div>
        
      </section>
    </main>


    <%- include('./includes/footer.ejs') %>


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>